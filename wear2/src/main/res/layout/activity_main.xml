<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    app:layout_box="all"
    tools:context="com.lbbento.pitchupwear.main.MainActivity"
    tools:deviceIds="wear">

    <com.lbbento.pitchuptunergauge.view.TunerGauge
        android:id="@+id/main_activity_gauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />

    <TextView
        android:id="@+id/main_activity_notetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:textAppearance="@style/TextAppearance.Wearable.Large"
        android:textColor="@android:color/white">

    </TextView>

</FrameLayout>